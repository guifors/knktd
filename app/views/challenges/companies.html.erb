<%= content_for(:navbar_class, "navbar-home") %>
<div class="banner-logo">
  <div class="logo d-flex justify-content-around">
    <div class="d-flex logo-text">
      <%= image_tag "logo.png", class: "" %>
      <p class="input pl-2">konektd</p>
    </div>
  </div>
</div>
<div class="banner-challenge">
  <div class="container">
    <div class="row pt-4">
      <div class="col-md-3">
        <i class="icon fas fa-industry"></i>
        <span class="challenge-title">Industry
        </span>
        <p class="input"><%= @challenge.corporate.company_industry %></p>
      </div>
      <div class="col-md-3">
        <i class="icon fas fa-building"></i>
        <span class="challenge-title">Company type
        </span>
        <p class="input"><%= @challenge.corporate.company_type %></p>
      </div>
      <div class="col-md-6">
        <i class="icon fas fa-hand-pointer"></i>
        <span class="challenge-title">Desired criteria
        </span>
        <p class="input"><%= @challenge.search_criteria %></p>
      </div>
      <div class="col-md-12">
        <i class="icon fas fa-rocket"></i>
        <span class="challenge-title">Challenge description
        </span>
        <p class="input"><%= @challenge.description %></p>
      </div>
    </div>
  </div>
</div>
<% if @challenge.published %>
  <div class="row">
    <div class="col-sm-8 offset-sm-2 d-flex justify-content-around">
      <div class="startup-card">
        <div class="info-section section">
          <div class="d-flex">
            <div class="startup-logo">
              <%= image_tag "https://res-4.cloudinary.com/crunchbase-production/image/upload/c_lpad,h_120,w_120,f_auto,b_white,q_auto:eco/v1493047751/reck0gtaywrfymhy3cqd.jpg" %>
            </div>
            <div class="startup-details pl-3">
              <h2 class="startup-name mb-0"><strong>Fixico</strong></h2>
              <i class="fas fa-map-marker-alt"></i>
              <span class="startup-location">Amsterdam</span>
              <p class="startup-short-description mb-1">Reinventing and digitising car repair handling</p>
            </div>
          </div>
        </div>
        <div class="border-bottom line"></div>
        <div class="details-section section">
          <div class="container">
            <div class="row pt-2">
              <div class="col-md-3">
                <div class="founding-year">
                  <p class="title">Founding year</p>
                  <p class="input">2014</p>
                </div>
              </div>
              <div class="col-md-3">
                <div class="employees">
                  <p class="title">Est. employees</p>
                  <p class="input">63</p>
                </div>
              </div>
              <div class="col-md-3">
                <div class="offering">
                  <p class="title">Offering</p>
                  <p class="input">Software</p>
                </div>
              </div>
              <div class="col-md-3">
                <div class="funding-amount">
                  <p class="title">Funding to date</p>
                  <p class="input">$10.2M</p>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="border-bottom line">
        </div>
        <div class="usp-section section">
          <div class="row pt-2">
            <div class="col-md-12">
              <div class="usp">
                <p class="title">What makes it unique</p>
                <p class="input">Largest 2-sided marketplace for damage repairs in Europe</p>
              </div>
            </div>
          </div>
        </div>
        <div class="border-bottom line">
        </div>
        <div class="poc-section section">
          <div class="row pt-2">
            <div class="col-md-12">
              <div class="poc">
                <p class="title">How would a POC look like?</p>
                <p class="input">Largest 2-sided marketplace for damage repairs in Europe</p>
              </div>
            </div>
          </div>
        </div>
        <div class="border-bottom line">
        </div>
        <div class="previous-poc-section section">
          <div class="row pt-2">
            <div class="col-md-12">
              <div class="previous-poc">
                <p class="title">Examples of previous POCs run</p>
                <p class="input">Largest 2-sided marketplace for damage repairs in Europe</p>
              </div>
            </div>
          </div>
        </div>
        <div class="border-bottom line">
        </div>
        <div class="attachments-section section">
          <div class="row pt-2">
            <div class="col-md-12">
              <div class="previous-poc">
                <p class="title">Attachments</p>
                <p class="input">Fixico deck</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div class="container challenge-not-published mt-5 pb-5">
    <div class="row">
      <div class="col-md-8 offset-sm-2">
        <h5><i class="fas fa-hourglass-end pr-1" style="text-align: center;"></i>We are working on identifying startups who can solve this challenge. We will contact you as soon as the research is complete. Stay tuned!</h5>
      </div>
    </div>
  </div>
<% end %>
